#include<stdio.h>
int main()
{
        int m1=0;
        int m2=0;
        int m3=0;

        printf("enter the marks of subject 1\n ");
        scanf("%d",&m1);
        printf("enter the marks of subject 2\n ");
        scanf("%d",&m2);

        printf("enter the marks of subject 3\n ");
        scanf("%d",&m3);

        int sum=0;
        sum=(m1+m2+m3);
        float avg=0;
        avg=sum/3;

        printf("the sum is %d \n",sum);
        printf("the average is %f \n",avg);
        return 0;
}
